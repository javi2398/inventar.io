# Configuración para Railway
APP_NAME="Inventar.io"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://tu-app.railway.app

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Base de datos - Railway proporcionará estas variables automáticamente
DB_CONNECTION=mysql
DB_HOST=
DB_PORT=3306
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# Cache y Session
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail (configurar con tu proveedor de email)
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@inventar.io"
MAIL_FROM_NAME="${APP_NAME}"

# Redis (opcional, si usas Redis en Railway)
REDIS_HOST=
REDIS_PASSWORD=
REDIS_PORT=6379

# Sanctum
SANCTUM_STATEFUL_DOMAINS=
